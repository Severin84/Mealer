generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String @unique
  email String @unique
  password String
  referanceToken String?
  Days Day[]
}

model Day{
   id Int @id @default(autoincrement())
   day String @unique
   author User @relation(fields: [authorID] , references: [id])
   authorID Int
   Breakfasts BreakfastData[]
   Lunchs LunchData[]
   Dinners DinnerData[]
}


model BreakfastData{
   id Int @id @default(autoincrement())
   Title String
   contents String
   MealType String
   author Day @relation(fields: [authorID],references: [id])
   authorID Int
}

model LunchData{
   id Int @id @default(autoincrement())
   Title String
   contents String
   MealType String
   author Day @relation(fields: [authorID],references: [id])
   authorID Int
}

model DinnerData{
   id Int @id @default(autoincrement())
   Title String
   contents String
   MealType String
   author Day @relation(fields: [authorID],references: [id])
   authorID Int
}

